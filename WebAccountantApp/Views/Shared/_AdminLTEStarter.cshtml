
<!DOCTYPE html>
<!--
This is a starter template page. Use this page to start your new project from
scratch. This page gets rid of all links and provides the needed markup only.
-->
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="x-ua-compatible" content="ie=edge">

    <title>@ViewData["Title"] - Web Accountant</title>

    <!--Bootstrap-->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <!-- Theme style -->
    <link rel="stylesheet" href="~/css/adminlte.min.css">
    <!--DataTables-->
    <link rel="stylesheet" href="~/css/dataTables.bootstrap4.min.css" />
    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="~/css/all.min.css">
    <!--DatePicker-->
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <!--Custom-->
    <link rel="stylesheet" href="~/css/site.css" />
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
</head>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">

        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
             @*Left navbar links*@ 
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
            </ul>
        </nav>
        <!-- /.navbar -->
    </div>

    <!-- Main Sidebar Container -->
    <aside class="main-sidebar sidebar-dark-primary elevation-4">
        <!-- Brand Logo -->
        
        <a href="#" class="brand-link">
            <i class="fas fa-file-invoice-dollar"></i>
            <span class="brand-text font-weight-light">Web Accountant</span>
        </a>

        <!-- Sidebar -->
        <div class="sidebar">
            <!-- Sidebar user panel (optional) -->

            <hr />

            <!-- Sidebar Menu -->
            <nav class="mt-2">
                <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                    <!-- Add icons to the links using the .nav-icon class
    with font-awesome or any other icon font library -->
                    <li class="nav-item">
                        <a asp-area="" asp-controller="Home" asp-action="Index" class="nav-link">
                            <i class="nav-icon fas fa-home"></i>
                            <p>
                                Home
                            </p>
                        </a>
                    </li>
                    @*Only for logged in users*@
                    <li class="nav-item">
                        <a asp-area="" asp-controller="Account" asp-action="Index" class="nav-link">
                            <i class="nav-icon fa fa-pen-alt"></i>
                            <p>
                                Accounts
                            </p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-area="" asp-controller="Transaction" asp-action="Index" class="nav-link">
                            <i class="nav-icon fas fa-book-open"></i>
                            <p>
                                Transactions
                            </p>
                        </a>
                    </li>

                    <li class="nav-item">
                        <a asp-area="" asp-controller="Report" asp-action="Index" class="nav-link">
                            <i class="nav-icon fas fa-book-open"></i>
                            <p>
                                Reports
                            </p>
                        </a>
                    </li>

                    <li class="nav-item">
                        <a asp-area="" asp-controller="BalanceReport" asp-action="Index" class="nav-link">
                            <i class="nav-icon fas fa-book-open"></i>
                            <p>
                                Balance Reports
                            </p>
                        </a>
                    </li>

                    <li class="nav-item has-treeview ">
                        <a href="#" class="nav-link">
                            <i class="nav-icon fas fa-tachometer-alt"></i>
                            <p>
                                Reports
                                <i class="right fas fa-angle-left"></i>
                            </p>
                        </a>
                        <ul class="nav nav-treeview">
                            <li class="nav-item">
                                <a asp-controller="LeaveTypes" asp-action="Index" class="nav-link">
                                    <i class="fas fa-list nav-icon"></i>
                                    <p>Montly Reports</p>
                                </a>
                            </li>

                        </ul>
                    </li>

                </ul>

            </nav>
            <!-- /.sidebar-menu -->
        </div>
        <!-- /.sidebar -->
    </aside>

    <!-- Content Wrapper. Contains page content -->

    <div class="content-wrapper">
        <div class="content-header">
            <div class="container-fluid">

            </div>
        </div><!--/content-header-->
        <!--Content-->
        <div class="content">
            <div class="container-fluid">
                @RenderBody()
            </div>
        </div>
    </div>
    <!-- /.content-wrapper -->
    <!-- Control Sidebar -->
    <aside class="control-sidebar control-sidebar-dark">
        <!-- Control sidebar content goes here -->
        <div class="p-3">
            <h5>Title</h5>
            <p>Sidebar content</p>
        </div>
    </aside>
    <!-- /.control-sidebar -->
    <!-- Main Footer -->
    <footer class="main-footer">
        <!-- To the right -->
        <div class="float-right d-none d-sm-inline">
            Styled by <a href="https://adminlte.io">AdminLTE.io</a>
        </div>
        <!-- Default to the left -->
        <strong>Copyright &copy; @DateTime.Now.Year .</strong> All rights reserved.
    </footer>

    <!-- ./wrapper -->
    <!-- REQUIRED SCRIPTS -->
    <!-- jQuery -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap 4.0-->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/js/adminlte.min.js"></script>
    <!--Fontawesome-->
    <script src="~/js/all.min.js"></script>

    <!--Datatables-->
    <script src="~/js/jquery.dataTables.min.js"></script>
    <script src="~/js/dataTables.bootstrap4.min.js"></script>
    <!--Custom-->
    <script src="~/js/site.js" asp-append-version="true"></script>
    <!--DatePicker-->
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <!--Script Section-->
    @RenderSection("Scripts", required: false)
</body>
</html>
