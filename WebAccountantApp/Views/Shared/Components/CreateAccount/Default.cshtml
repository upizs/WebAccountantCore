@model WebAccountantApp.Models.CreateAccountVM

<hr />
<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Create Account</h3>
    </div>
    <div class="card-body">
            <div class="row">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
                        <label asp-for="Value" class="control-label"></label>
                        <input asp-for="Value" class="form-control" />
                        <span asp-validation-for="Value" class="text-danger"></span>
                    </div>
                    <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
                        <label asp-for="AccountType" class="control-label"></label>
                        <select asp-for="AccountType" class="form-control">
                            @foreach (var type in Model.AccountTypes)
                            {
                                <option>@type</option>
                            }
                        </select>
                        <span asp-validation-for="AccountType" class="text-danger"></span>
                    </div>
                    <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
               
            </div>
        </div>
    </div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
